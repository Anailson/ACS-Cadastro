<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CitizenFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edt_search_citizen"
            android:hint="@string/hint_search_citizen"
            android:drawableRight="@android:drawable/ic_menu_search"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="11" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvw_citizens"
        android:layout_gravity="left|top"
        android:layout_below="@+id/linearLayout2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_citizen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_citizen_add"

        android:layout_marginRight="@dimen/minimum_gap"
        android:layout_marginBottom="@dimen/medium_gap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
