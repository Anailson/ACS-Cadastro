<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_ctz_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/txt_default"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/txt_ctz_sus_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_default" />

        <TextView
            android:id="@+id/txt_ctz_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_default" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_edit_citizen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_weight="0.1"
        android:contentDescription="@string/hint_edit_citizen"
        android:src="@android:drawable/ic_menu_edit"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/btn_delete_citizen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_weight="0.1"
        android:contentDescription="@string/hint_edit_citizen"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@android:color/transparent"/>

</LinearLayout>
