<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="tcc.acs_cadastro_mobile.views.VisitListFragment">

    <tcc.acs_cadastro_mobile.customViews.SearchingEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_search_visit"
        android:hint="@string/hint_search_visit"/>

    <ListView
        android:id="@+id/lvw_visits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edt_search_visit" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_citizen_add"

        android:layout_marginRight="@dimen/minimum_gap"
        android:layout_marginBottom="@dimen/medium_gap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
