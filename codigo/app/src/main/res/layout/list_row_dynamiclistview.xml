<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseCompoundDrawables">

    <LinearLayout
        android:id="@+id/list_row_draganddrop_touchview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.nhaarman.listviewanimations.itemmanipulation.dragdrop.GripView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:color="@android:color/black"
            android:paddingBottom="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="4dp" />

        <com.nhaarman.listviewanimations.itemmanipulation.dragdrop.GripView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:color="@android:color/black"
            android:paddingBottom="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="4dp" />


        <View
            android:id="@+id/list_row_draganddrop_cor"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/icon_retangulo_verde" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:minHeight="38dp">

        <LinearLayout
            android:id="@+id/list_row_draganddrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <!--            android:fontFamily="sans-serif-light"-->
            <TextView
                android:id="@+id/list_row_draganddrop_textview_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Paciente: Iuri batista Teles  1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/cor_preta"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/list_row_draganddrop_textview_subtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Subtitulo 1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/cor_preta"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9">

            <CheckBox
                android:id="@+id/list_row_draganddrop_checkbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_centerVertical="true" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>