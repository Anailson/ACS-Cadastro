<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:id="@+id/fragment_tab_layout_indicadores"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <View
            android:layout_width="30.0dip"
            android:layout_height="10.0dip"
            android:background="@drawable/icon_retangulo_amarelo"
            android:padding="10.0dip" />

        <View
            android:layout_width="30.0dip"
            android:layout_height="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/icon_retangulo_verde"
            android:padding="10.0dip" />

        <View
            android:layout_width="30.0dip"
            android:layout_height="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/icon_retangulo_azul"
            android:padding="10.0dip" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/fragment_tab_layout_indicadores"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</RelativeLayout>